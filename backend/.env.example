# Environment (set by hosting provider)
PORT=5000
NODE_ENV=production

# Database - use DATABASE_URL for cloud (Neon/Supabase/Render)
# DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require
# OR use individual params for local dev:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thenation
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT
JWT_SECRET=change_this_to_a_very_long_random_string_in_production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=https://your-app.vercel.app
